<% form_for @filedetail, :html => { :multipart => true } do |f| %>
  <% if @filedetail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@filedetail.errors.count, "error") %> prohibited this developer from being saved:</h2>

      <ul>
      <% @filedetail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br/>
<div>
	<%= f.label :file %>
	<%= f.file_field :fdata %><br/>
</div>
<br/>
<div>
	<%= f.label :password %>
	<%= f.text_field :fdata_password %><br/>
</div>
<br/>
<div>
	<%= f.label :expiry_date %>
	<%= calendar_date_select_includes "silver", :locale => "ja" %><br/>
</div>
<br/>

<div>
	<%= f.submit %>
<br/>
</div>

<% end %>
